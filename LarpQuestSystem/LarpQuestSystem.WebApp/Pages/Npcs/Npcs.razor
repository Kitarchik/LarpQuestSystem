@page "/npcs"
@using LarpQuestSystem.Data.Model
@using LarpQuestSystem.WebApp.Components.Npcs

@inject HttpClient Http
@inject NavigationManager NavigationManager

<AuthorizeView Policy="@Policies.IsScriptWriter">
    <h1>Список НПС</h1>

    @if (_npcs == null)
    {
        <p><em>@_message</em></p>
    }
    else
    {
        <CascadingValue Value=@_npcs>
            <NpcsAddForm OnNpcsChange="ChangeNpcs" />
            <br />
            <br />
            <hr />
            <h2>Таблица НПС</h2>
            <NpcsShortTable />
        </CascadingValue>
    }
</AuthorizeView>

@code {
    private List<Npc> _npcs { get; set; }
    private string _message = "Загрузка...";

    [CascadingParameter(Name = "BaseApiUrl")] protected string BaseApiUrl { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _npcs = await Http.GetJsonAsync<List<Npc>>($"{BaseApiUrl}/npcs");
    }

    private void ChangeNpcs(List<Npc> npcs)
    {
        _npcs = npcs;
        StateHasChanged();
    }
}
